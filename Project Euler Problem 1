! Project Euler Problem 1 in Fortran
! compiled in gfortran 12.2.0 (GCC 12.2.0)

program euler1
    implicit none
    integer :: i = 0, sum = 0
    
    do i = 0, 999
        if (mod(i, 3) == 0 .or. mod(i, 5) == 0) then
            sum = sum + i
        end if
    end do
    
    print *, "The sum of multiples of 3 or 5 is", sum
end program euler1
