// Project Euler Problem 1
// in Swift 5.8 (swiftlang-5.8.0.124.2 clang-1403.0.22.11.100)

func sumOfMultiples(n: Int) -> Int {

    var sum = 0
    for i in 0...n {
        if i % 3 == 0 || i % 5 == 0 {
            sum = i + sum
        }
    }
    return sum
}

let n = 1000
let result = sumOfMultiples(n: n)
print("The sum of all the multiples of 3 or 5 below \(n) is \(result).")
