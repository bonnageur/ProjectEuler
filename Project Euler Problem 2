// Project Euler 2: even Fibonacci sum below four million

// run $ cargo new foo
// then run $ cargo run

fn fibonacci_sum(limit: u32) -> u32 {
    let mut sum = 0;
    let mut a = 1;
    let mut b = 2;
    while a < limit {
        if a % 2 ==0 {
            sum += a;
        }
        let next = a + b;
        a = b;
        b = next;
    }
    sum
}

fn main() {
    let limit = 4_000_000;
    let result = fibonacci_sum(limit);
    println!("The sum of even-valued Fibonacci sequences below {} is: {}", limit, result);
}
